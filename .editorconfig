#
# http://editorconfig.org
root = true
#
# Global
[*]
charset                  = utf-8
indent_size              = 2
end_of_line              = lf
indent_style             = space
insert_final_newline     = true
#
# Markdown
[*.md]
trim_trailing_whitespace = false
#
# PHP
[*.php]
tab_width                = 4
indent_size              = tab
indent_style             = tab
trim_trailing_whitespace = true
